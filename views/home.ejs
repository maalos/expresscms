<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="ExpressCMS testing website">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="maalos">

    <title>Homepage</title>
    
    <link rel="stylesheet" type="text/css" href="/styles/user-style.css">
</head>

<body>
    <nav>
        <p><a href="/">Home</a></p>
        <p>
            <% if (user) { %>
                <a href="/logout" id="logout"><%= user.username %> (Log out)</a>
                <% if (user.isAdmin == true) { %>
                    <a href="/dashboard" id="dashboard">Dashboard</a>
                <% } %>
            <% } else { %>
                <a href="/login" id="logout">Guest (Log in)</a>
            <% } %>
        </p>
    </nav>

    <h1>ExpressCMS</h1>
    <h2>Homepage</h2>

    <div id="container">
    <div class="container-child">
        <h3 class="center">All posts</h3>
    <% if (!posts.length) { %>
        <p class="message">
            No posts.
        </p>
    <% } else { %>
        <div class="posts-index">
            <% posts.forEach((post, index) => { %>
                <div class="post-preview post" onclick="location.href='/posts/<%= index %>'" >
                    <h3>
                        <q><%= post.title %></q>
                    </h3>
                    <p>
                        <%- post.content.replaceAll("\r", "").replaceAll("\n", "") %>
                    </p>
                </div>
            <% }); %>
        </div>
    <% } %>
    </div>
    <div class="container-child">
        <h3 class="center">All categories</h3>
        <% if (!categories.length) { %>
        <p class="message">
            No categories.
        </p>
    <% } else { %>
        <div class="categories-index">
            <% categories.forEach((category, index) => { %>
                <div class="category-preview category" onclick="location.href='/categories/<%= index %>'" >
                    <h3>
                        <q><%= category.name %></q>
                    </h3>
                    <p>
                        ID: <%= category.id %>
                    </p>
                </div>
            <% }); %>
        </div>
    <% } %>
    </div>
    </div>
</body>

</html>