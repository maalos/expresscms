<div id="container">
    <div class="container-child">
        <h3 class="center">All posts</h3>
<% if (!posts.length) { %>
    <p class="message">No posts.</p>
    <% } else { %>
        <div class="posts-index">
            <% posts.forEach((post, index)=> { %>
                <div class="post">
                    <h3>
                        <q><%= post.title %></q>
                    </h3>
                    <p>
                        <%= post.content.replaceAll("\r", "").replaceAll("\n", "").substring(0, 1024) + ((post.content.replaceAll("\r", "").replaceAll("\n", "<br>").length > 512) ? " [...]" : "") %>
                    </p>
                    <a href="#" <%- `onclick="confirmDelete(${index}, 'post', 'posts')"` %>>Delete</a>
                    <a href="/posts/<%= index %>/edit">Edit</a>
                    <a href="/posts/<%= index %>">View</a>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>
<div class="container-child">
    <div class="container-child-child">
        <h3 class="center">All categories</h3>
        <% if (!categories.length) { %>
        <p class="message">
            No categories.
        </p>
    <% } else { %>
        <div class="categories-index">
            <% categories.forEach((category, index) => { %>
                <div class="category">
                    <h3>
                        <q><%= category.name %></q>
                    </h3>
                    <p>
                        ID: <%= category.id %>
                    </p>
                    <a href="#" <%- `onclick="confirmDelete(${index}, 'category', 'categories')"` %>>Delete</a>
                    <a href="/categories/<%= index %>/edit">Edit</a>
                    <a href="/categories/<%= index %>">View</a>
                </div>
            <% }); %>
        </div>
    <% } %>
    </div>
    <div class="container-child-child">
        <h3 class="center">All users</h3>
        <% if (!users.length) { %>
        <p class="message">
            No users.
        </p>
    <% } else { %>
        <div class="users-index">
            <% users.forEach((user, index) => { %>
                <div class="user">
                    <h3>
                        <q><%= user.username %></q>
                    </h3>
                    <p>
                        ID: <%= index %>
                        <br>
                        Role: <%= (user.isAdmin) ? "Administrator" : "User" %>
                    </p>
                    <a href="#" <%- `onclick="confirmDelete(${index}, 'user', 'users')"` %>>Delete</a>
                    <a href="/users/<%= index %>/edit">Edit</a>
                    <a href="/users/<%= index %>">View</a>
                </div>
            <% }); %>
        </div>
    <% } %>
    </div>
</div>
</div>
<script src="/scripts/utils.js" defer></script>